      },


      {
        "reset_light_line_panel@settings_common.light_line_panel": {
          "ignored": "(not $is_pregame)"
        }
      },
      {
        "reset_button@settings_common.action_button": {
          "ignored": "(not $is_pregame)",
          "$pressed_button_name": "button.reset_settings",
          "$button_text": "options.resetSettings",
          "property_bag": {
            "reset_group": "video"
          }
        }
      }
    ]
  }
}
