              "invalid_pack_grid@resource_packs.invalid_pack_grid": {
                "size": [ "100%", "default" ]
              }
            }
          ],
          "bindings": [
            {
              "binding_collection_name": "$available_pack_items",
              "binding_name": "#available_grid_visible",
              "binding_name_override": "#visible",
              "binding_type": "collection"
