{
  "namespace": "server_form",

  "main_screen_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "server_form_factory": {
          "type": "factory",
          "control_ids": {
            "long_form": "@server_form.long_form",
            "custom_form": "@server_form.custom_form"
          }
        }
      }
    ]
  },

  "custom_form": {
    "type": "panel",
    "controls": [
      {
        "custom_form@common_dialogs.main_panel_no_buttons": {
          "$update_string": "customUI_",
          "size": [ 225, 200 ],
          "$title_panel": "common_dialogs.standard_title_label",
          "$title_size": [ "100% - 14px", 10 ],
          "$text_name": "#title_text",
          "$title_text_binding_type": "none",
          "$child_control": "server_form.custom_form_panel",
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "(($text_name - $update_string) = $text_name)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "full_custom_form@common_dialogs.main_panel_no_buttons": {
          "$update_string": "customUI_full",
          "size": [ "100%", "100%" ],
          "$title_panel": "common_dialogs.standard_title_label",
          "$title_size": [ "100% - 14px", 10 ],
          "$text_name": "#update_title_text",
          "$title_text_binding_type": "none",
          "$child_control": "server_form.custom_form_panel",
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "($text_name - $update_string)",
              "target_property_name": "#update_title_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not (($text_name - $update_string) = $text_name))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

  "custom_form_panel@common.scrolling_panel" : {
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "$show_background": false,
    "size": [ "100%", "100%" ],
    "$scrolling_content": "server_form.custom_form_scrolling_content",
    "$scroll_size": [ 5, "100% - 4px" ],
    "$scrolling_pane_size": [ "100% - 4px", "100% - 2px" ],
    "$scrolling_pane_offset": [ 2, 0 ],
    "$scroll_bar_right_padding_size": [ 0, 0 ]
  }
}