{ 
  "sale_ribbon_icon": {
    "type": "image",
    "texture": "textures/ui/sale_ribbon",
    "layer": 12
  },
  
  "skin_or_profile_panel": {
    "type": "panel",
    "size": [ "100%", 25 ],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "controls": [
      {
        "change_skin@start.change_skin_button": {
          "bindings": [
            {
              "binding_name": "(not #persona_enabled)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "change_profile@start.profile_button_panel": {
          "bindings": [
            {
              "binding_name": "#persona_enabled",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },
  
  "profile_button_panel": {
	"type": "panel",
    "size": [ "100%cm", 25 ],
	"controls": [
	  {
		"profile_button@start.profile_button": {
		  "layer": 2
		}
	  },
	  {
	    "emotes_icon@start.new_offers_icon": {
		  "offset": [ 20, -9 ],
		  "layer": 50,
		  "$tag_text": "이모티콘!",
          "$tag_tts_control_header": "emotes"
		}
	  },
	  {
		"wave_image": {
		  "type": "image",
		  "texture": "textures/ui/WavingLeft",
		  "size": [ 14, 21 ],
		  "anchor_from": "left_middle",
		  "anchor_to": "left_middle",
		  "offset": [ -13, 0 ],
		  "layer": 1,
		  "uv_size": [ 42, 63 ],
		  "uv": "@start.wave_animation",
		  "disable_anim_fast_forward": true
		}
	  }
	]
  },
  
  "wave_animation": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 40,
    "frame_step": 42,
    "fps": 12,
	"reversible": false
  }
}