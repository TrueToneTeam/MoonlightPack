{
  "namespace": "play_common",

  //--------------------------------------------------------------------------------
  // Panel
  //--------------------------------------------------------------------------------
  "base_panel": {
    "type": "panel"
  },

  "void_panel": {
    "type": "panel",
    "size": [ 0, 0 ]
  },


  //--------------------------------------------------------------------------------
  // Icon
  //--------------------------------------------------------------------------------
  "icon_highlight": {
    "type": "image",
    "texture": "textures/ui/ore/icon-highlight-spritesheet",
    "layer": 3,
    "size": [ 12, 12 ],
    "uv_size": [ 24, 24 ],
    "uv": "@play_common.icon_highlight_uv_animation",
    "disable_anim_fast_forward": true,
    "bilinear": true
  },

  "icon_highlight_uv_animation": {
    "anim_type": "flip_book",
    "initial_uv": [ 0, 0 ],
    "frame_count": 9,
    "frame_step": 9,
    "fps": 10,
    "reversible": false
  },


  "new_worlds_tab_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_world_tab",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_friends_tab_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_friends_tab",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_multiplay_tab_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_multiplay_tab",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_server_tab_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_server_tab",
    "layer": 3,
    "size": [ 10, 10 ]
  },

  "new_debug_tab_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_debug",
    "layer": 3,
    "size": [ 10, 10 ]
  },

  "new_friends_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_friends",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_lan_game_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_multiplay",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_realms_icon": {
    "type": "image",
    "texture": "textures/ui/ore/icon_realms",
    "layer": 3,
    "size": [ 12, 12 ]
  },

  "new_edit_icon": {
    "type": "image",
    "texture": "textures/ui/ore/edit_icon",
    "layer": 3,
    "size": [ 16, 16 ]
  },


  //--------------------------------------------------------------------------------
  // Top Tab
  //--------------------------------------------------------------------------------
  "new_top_tab@common_tabs.tab_top": {
    "$toggle_tts_enabled_binding_type": "global",
    "$radio_toggle_group": true,
    "$toggle_name": "navigation_tab",
    "$toggle_group_default_selected": "$default_tab",
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "$toggle_tts_type_priority": 1001,
    "$toggle_tts_toggle_on_text": "",
    "$toggle_tts_toggle_off_text": "",
    "$toggle_tts_index_priority": 1002,

    "$tab_unchecked_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_unchecked_hover_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_unchecked_locked_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_unchecked_locked_hover_text_color": [ 1.0, 1.0, 1.0 ],

    "$tab_checked_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_checked_hover_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_checked_locked_text_color": [ 1.0, 1.0, 1.0 ],
    "$tab_checked_locked_hover_text_color": [ 1.0, 1.0, 1.0 ],

    "$unchecked_default_image": "textures/ui/ore/button_borderless_dark",
    "$unchecked_hover_image": "textures/ui/ore/button_borderless_darkhover",
    "$unchecked_locked_image": "textures/ui/ore/button_borderless_dark",
    "$unchecked_locked_hover_image": "textures/ui/ore/button_borderless_dark",

    "$checked_default_image": "textures/ui/ore/button_borderless_darkpressed_underline",
    "$checked_hover_image": "textures/ui/ore/button_borderless_darkpressed_underline",
    "$checked_locked_image": "textures/ui/ore/button_borderless_darkpressed_underline",
    "$checked_locked_hover_image": "textures/ui/ore/button_borderless_darkpressed_underline"
  },

  "new_world_navigation_tab@play_common.new_top_tab": {
    "$tab_view_binding_name": "world_navigation_tab_toggle",
    "$tab_icon": "play_common.new_worlds_tab_icon",
    "$count_text_name": "#world_item_count",
    "$tab_text_name": "playScreen.tab.all_worlds",
    "$toggle_group_forced_index": 0,
    "$tab_content": "play_common.new_common_navigation_tab_content"
  },

  "new_multiplay_navigation_tab@play_common.new_top_tab": {
    "$tab_view_binding_name": "multiplay_navigation_tab_toggle",
    "$tab_icon": "play_common.new_multiplay_tab_icon",
    "$count_text_name": "#friend_world_item_count",
    "$tab_text_name": "playScreen.tab.multiplay",
    "$toggle_group_forced_index": 1,
    "$tab_content": "play_common.new_common_navigation_tab_content"
  },

  "new_server_navigation_tab@play_common.new_top_tab": {
    "$tab_view_binding_name": "server_navigation_tab_toggle",
    "$tab_icon": "play_common.new_server_tab_icon",
    "$count_text_name": "#server_world_item_count",
    "$tab_text_name": "playScreen.tab.server",
    "$toggle_group_forced_index": 2,
    "$tab_content": "play_common.new_common_navigation_tab_content"
  },


  "new_common_navigation_tab_content": {
    "type": "panel",
    "size": [ "100%c - 3px", "100% - 4px" ],
    "controls": [
      {
        "icon_and_text_panel": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%c", "100%" ],
          "$content_offset|default": [ 0, 0.5 ],
          "variables": [
            {
              "requires": "$is_checked_state",
              "$content_offset": [ 0, 2 ]
            }
          ],
          "offset": "$content_offset",
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "icon_section": {
                "type": "panel",
                "size": [ 12, 12 ],
                "$image_size|default": [ 12, 12 ],
                "$image_offset|default": [ 0, 2 ],
                "layer": 2,
                "controls": [
                  { "icon@$tab_icon": { "size": "$image_size", "offset": "$image_offset", "anchor_from": "center", "anchor_to": "center" } },
                  { "icon_highlight@play_common.icon_highlight": { "visible": "$is_checked_state", "size": "$image_size", "offset": "$image_offset", "anchor_from": "center", "anchor_to": "center" } }
                ] 
              } 
            },
            { "padding@common.empty_panel": { "size": [ 4, "100%" ] } },
            { "count_text@play_common.new_tab_text_stack_panel": { "size": [ "100%c", "100%" ] } }
          ]
        }
      }
    ]
  },

  "new_tab_text_stack_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", "100%" ],
    "$text_offset|default": [ -1, 3.5 ],
    "controls": [
      {
        "padding@common.empty_panel": {
          "size": [ 1, "100%" ]
        }
      },
      {
        "text_section": {
          "type": "panel",
          "size": [ "100%c", "100%c" ],
          "controls": [
            {
              "text@play_common.common_button_text": {
                "layer": 3,
                "text": "$tab_text_name",
                "font_scale_factor": 1.05,
                "text_alignment": "center",
                "offset": "$text_offset",
                "color": [ 1.0, 1.0, 1.0 ]
              }
            }
          ]
        }
      }
    ]
  },


  //--------------------------------------------------------------------------------
  // Multiplay Tab Sub Category Button & Panel
  //--------------------------------------------------------------------------------
  "base_category_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "$category_content|default": "",
    "controls": [
      {
        "scrolling_panel@play.scrolling_offsets": {
          "size": [ "100%", "fill" ],
          "$scrolling_content": "$category_content"
        }
      }
    ]
  },

  //Category Button
  "base_category_button@button_preset.color_ore_section_toggle": {
    "$button_type_panel": "play_common.vertical_image_content_base",

    "$section_topic": "main_category",

    "$content_panel_size": [ "100%", "100%" ],
    "$content_image": "textures/ui/ore/icon_realms",
    "$content_title": "Unknow Title",
    "$content_lore": "Unknow Button Lore"
  },

  "main_category_button@play_common.base_category_button": {
    "$section_topic": "main_category",
    "$button_texture_color": [ 0.89, 0.831, 0.82 ],

    "$content_image": "textures/ui/ore/icon_realms",
    "$content_title": "Main",
    "$content_lore": "Unknow Button Lore"
  },

  "realms_category_button@play_common.base_category_button": {
    "$section_topic": "realms_category",
    "$button_texture_color": [ 0.4, 0.118, 0.459 ],
    "$button_text_color": [ 1.0, 1.0, 1.0 ],

    "$content_image": "textures/ui/ore/icon_realms",
    "$content_title": "playScreen.category.realms.title",
    "$content_lore": "playScreen.category.realms.lore_short"
  },

  "lan_category_button@play_common.base_category_button": {
    "$section_topic": "lan_category",
    "$button_texture_color": [ 0.89, 0.831, 0.82 ],
    "$button_text_color": [ 0.3, 0.3, 0.3 ],

    "$content_image": "textures/ui/ore/icon_lan",
    "$content_title": "playScreen.category.lan.title",
    "$content_lore": "playScreen.category.lan.lore_short"
  },

  "main_mini_category_button@play_common.base_category_button": {
    "$button_type_panel": "custom_common.button_text_content_panel",
    "$section_topic": "main_category",
    "$button_texture_color": [ 0.808, 0.792, 0.792 ],
    "$button_text": "playScreen.category.main.title"
  },

  "realms_mini_category_button@play_common.base_category_button": {
    "$button_type_panel": "custom_common.button_text_content_panel",
    "$section_topic": "realms_category",
    "$button_texture_color": [ 0.4, 0.118, 0.459 ],
    "$button_text_color": [ 1.0, 1.0, 1.0 ],
    "$button_text": "playScreen.category.realms_plus.title"
  },

  "lan_mini_category_button@play_common.base_category_button": {
    "$button_type_panel": "custom_common.button_text_content_panel",

    "$section_topic": "lan_category",
    "$button_texture_color": [ 0.89, 0.831, 0.82 ],
    "$button_text_color": [ 0.3, 0.3, 0.3 ],
    "$button_text": "playScreen.category.lan.title"
  },


  "category_lore_base": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "background_image": { "type": "image", "size": [ "100%", "100%" ], "texture": "textures/ui/hud_text_background_white", "color": "$category_border_color" } },
      {
        "content_panel": {
          "layer": 10,
          "type": "panel",
          "size": [ "90%", "90%" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "icon_and_title": {
                "type": "stack_panel",
                "size": [ "100%", "100%" ],
                "orientation": "vertical",
                "controls": [
                  {
                    "icon_panel": {
                      "type": "panel",
                      "size": [ "100%", "50%x" ],
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "controls": [
                        { "icon": { "type": "image", "size": [ "90%", "90%" ], "texture": "$category_icon", "anchor_from": "center", "anchor_to": "center" } }
                      ]
                    }
                  },
                  { "00_void_panel": { "type": "panel", "size": [ "100%", 6 ] } },
                  {
                    "title_lore_panel": {
                      "type": "stack_panel",
                      "size": [ "100%", "fill" ],
                      "orientation": "vertical",
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "$default_color|default": [ 1.0, 1.0, 1.0 ],
                      "controls": [
                        { "start_void": { "type": "panel", "size": [ "100%", "fill" ] } },
                        { "title": { "type": "label", "size": [ "100%", "default" ], "max_size": [ "100%", "default" ], "text": "$category_title", "text_alignment": "center", "font_scale_factor": 1.5, "locked_color": "$default_color" } },
                        { "lore": { "type": "label", "size": [ "100%", "default" ], "max_size": [ "100%", "default" ], "text": "$category_lore", "text_alignment": "center", "font_scale_factor": 1.0, "locked_color": "$default_color" } },
                        { "end_void": { "type": "panel", "size": [ "100%", "fill" ] } }
                      ]
                    }
                  },
                  { "01_void_panel": { "type": "panel", "size": [ "100%", 4 ] } },
                  {
                    "button_panel": {
                      "type": "panel",
                      "size": [ "100%", 24 ],
                      "$default_selector_toggle_index": 0,
                      "controls": "$category_button_content"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },



  "friends_tab_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%" ],
    "orientation": "vertical",
    "controls": [
      {
        "top_content": {
          "type": "panel",
          "size": [ "100%", "24px" ],
          "controls": [
            { "background_image": { "type": "image", "size": [ "100%", "100%" ], "texture": "textures/ui/White", "color": [ 0.3, 0.3, 0.3 ], "anchor_from": "center", "anchor_to": "center" } },
            { "outline_image": { "type": "image", "size": [ "100%", "100%" ], "texture": "textures/ui/side_menu_side_image", "color": [ 0.4, 0.4, 0.4 ], "anchor_from": "center", "anchor_to": "center" } },
            {
              "friends_title_panel": {
                "type": "panel",
                "size": [ "90%", "100%c" ],
                "anchor_from": "center",
                "anchor_to": "center",
                "controls": [
                  { "friends_title": { "type": "label", "size": [ "100%", "default" ], "max_size": [ "100%", "default" ], "text": "playScreen.side_menu.friends.title", "text_alignment": "center", "font_scale_factor": 1.1 } }
                ]
              }
            },
            { "main_close_side_menu@play_common.main_close_side_menu_button": { "size": [ "100%y", "90%" ], "anchor_from": "right_middle", "anchor_to": "right_middle" } }
          ]
        }
      },
      {
        "friends_stack_panel": {
          "type": "panel",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "content": {
                "type": "stack_panel",
                "size": [ "90%", "100%" ],
                "anchor_from": "center",
                "anchor_to": "center",
                "controls": [
                  { "start_padding": { "type": "panel", "size": [ "100%", 4 ] } },
                  {
                    "header_button": {
                      "type": "panel",
                      "size": [ "100%", 30 ],
                      "ignored": "$add_friend_not_visible",
                      "controls": [
                        {
                          "add_friend@button_preset.green_ore_button": {
                            "enabled": "((not $supports_add_friend) or $nx_os or $is_ps4)",
                            "size": [ "95%", "90%" ],
                            "anchor_from": "center",
                            "anchor_to": "center",

                            "$pressed_button_name": "button.menu_network_add_friend",
                            "$button_text": "playScreen.side_menu.friends.player_search",
                            "$button_focus_precedence": 10,

                            "bindings": [
                              {
                                "binding_name": "#add_friend_button_visible",
                                "binding_name_override": "#visible",
                                "binding_type": "global"
                              },
                              {
                                "binding_name": "#cross_platform_enabled",
                                "binding_name_override": "#enabled"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  { "padding_1": { "type": "panel", "size": [ "100%", 4 ] } },
                  {
                    "no_friends_grid_panel": {
                      "type": "panel",
                      "size": [ "100%", "fill" ],
                      "controls": [
                        {
                          "no_friends_stack_panel": {
                            "type": "stack_panel",
                            "size": [ "100%", "100%c" ],
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "controls": [
                              {
                                "image_panel": {
                                  "type": "panel",
                                  "size": [ "100%", "50%x + 10px" ],
                                  "controls": [
                                    {
                                      "image": {
                                        "type": "image",
                                        "size": [ "100%y", "90%" ],
                                        "anchor_from": "center",
                                        "anchor_to": "center",
                                        "texture": "textures/ui/realms_faq_fox"
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "title": {
                                  "type": "label",
                                  "size": [ "100%", "default" ],
                                  "max_size": [ "100%", "default" ],
                                  "text": "playScreen.side_menu.friends.not_friends.title",
                                  "text_alignment": "center"
                                }
                              },
                              { "void_panel@common.empty_panel": { "size": [ 0, 4 ] } },
                              {
                                "text": {
                                  "type": "label",
                                  "size": [ "100%", "default" ],
                                  "max_size": [ "100%", "default" ],
                                  "text": "playScreen.side_menu.friends.not_friends.lore",
                                  "text_alignment": "center"
                                }
                              }
                            ]
                          }
                        }
                      ],
                      "bindings": [
                        {
                          "binding_name": "#no_friends_grid_message_visible",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "scrolling_panel@play.scrolling_offsets": {
                      "size": [ "100%", "fill" ],
                      "$scrolling_content": "play.friends_scroll_panel",
                      "bindings": [
                        {
                          "binding_name": "(not #no_friends_grid_message_visible)",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  { "end_padding": { "type": "panel", "size": [ "100%", 4 ] } }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "lan_tab_panel": {
