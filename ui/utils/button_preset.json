{
  "namespace": "button_preset",

  // Button
  "ore_button_base@common_buttons.light_text_button": {
    "$default_button_texture": "textures/ui/ore/button_borderless_light",
    "$hover_button_texture": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_button_texture": "textures/ui/ore/button_borderless_lightpressed",
    "$locked_button_texture": "textures/ui/ore/disabledButtonNoBorder",

    "$button_text_max_size": [ "100%", "100%" ],
    "$default_text_color": "$light_button_default_text_color",
    "$hover_text_color": "$light_button_default_text_color",
    "$pressed_text_color": "$light_button_default_text_color",
    "$locked_text_color": "$light_button_hover_text_color",

    "$border_visible": false,

    "$button_pressed_offset|default": [ 0, 2 ]
  },

  "color_ore_button@button_preset.light_ore_button": {
    "$image_color|default": [ 0.89, 0.831, 0.82 ],
    "$button_image_color": "$image_color"
  },

  "light_ore_button@button_preset.ore_button_base": {
    "$font_type|default": "default",
    "$button_font_scale_factor|default": 1.0
  },

  "green_ore_button@button_preset.ore_button_base": {
    "$default_button_texture": "textures/ui/ore/button_borderless_green",
    "$hover_button_texture": "textures/ui/ore/button_borderless_greenhover",
    "$pressed_button_texture": "textures/ui/ore/button_borderless_greenpressed",

    "sound_name": "click_on.ore_button_click",

    "$font_type|default": "default",
    "$button_font_scale_factor|default": 1.0,

    "$default_text_color": "$light_button_hover_text_color",
    "$hover_text_color": "$light_button_hover_text_color",
    "$pressed_text_color": "$light_button_hover_text_color"
  },


  // Toggle
  "ore_toggle_base@common_toggles.light_content_toggle": {
    "$default_texture": "textures/ui/ore/button_borderless_light",
    "$hover_texture": "textures/ui/ore/button_borderless_lightpressed",
    "$pressed_texture": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_no_hover_texture": "textures/ui/ore/button_borderless_lightpressednohover",

    "$default_border_visible": false,
    "$hover_border_visible": false,

    "$button_pressed_offset|default": [ 0, 2 ]
  },

  "color_ore_toggle@button_preset.light_ore_toggle": {
    "$image_color|default": [ 0.89, 0.831, 0.82 ],
    "$button_image_color": "$image_color"
  },

  "light_ore_toggle@button_preset.ore_toggle_base": {
    "$button_type_panel": "custom_common.button_text_content_panel",

    "$font_type": "MinecraftTen",
    "$button_font_scale_factor": 1.0,

    "$default_text_color": [ 0.3, 0.3, 0.3 ],
    "$hover_text_color": [ 0.3, 0.3, 0.3 ],
    "$default_checked_text_color": [ 0.3, 0.3, 0.3 ],
    "$hover_checked_text_color": [ 0.3, 0.3, 0.3 ]
  },

  "green_ore_toggle@button_preset.ore_toggle_base": {
    "$button_type_panel": "custom_common.button_text_content_panel",

    "$default_texture": "textures/ui/ore/button_borderless_green",
    "$hover_texture": "textures/ui/ore/button_borderless_greenpressed",
    "$pressed_texture": "textures/ui/ore/button_borderless_greenhover",
    "$pressed_no_hover_texture": "textures/ui/ore/button_borderless_greenpressednohover",

    "$font_type": "MinecraftTen",
    "$button_font_scale_factor": 1.0,

    "$default_text_color": [ 1.0, 1.0, 1.0 ],
    "$hover_text_color": [ 1.0, 1.0, 1.0 ],
    "$default_checked_text_color": [ 1.0, 1.0, 1.0 ],
    "$hover_checked_text_color": [ 1.0, 1.0, 1.0 ]
  },

  "underline_toggle_base@common_toggles.light_content_toggle": {
    "$button_type_panel": "button_content_preset.underline_toggle_content",

    "$default_texture": "textures/ui/empty",
    "$hover_texture": "textures/ui/empty",
    "$pressed_texture": "textures/ui/empty",
    "$pressed_no_hover_texture": "textures/ui/empty",

    "$default_border_visible": false,
    "$hover_border_visible": false,

    "$button_offset|default": [ 0, 0 ],
    "$void_panel_size|default": [ 10, "100%" ],

    "$radio_toggle_group": true,
    "$toggle_name": "underline_navigation_toggle",
    "$toggle_group_default_selected": "$default_selector_toggle_index",
    "$toggle_view_binding_name": "$section_topic",
    "$toggle_state_binding_name": "#toggle_state",
    "$toggle_on_hover_binding_name": "none",
    "$toggle_tab_focus_binding_type": "global",
    "$toggle_tab_focus_binding_name": "#navigation_tab_focus_precedence"
  },

  "ore_section_toggle_base@common_toggles.light_content_toggle": {
    "$button_type_panel": "custom_common.tab_button_content_panel",

    "$default_texture": "textures/ui/ore/button_flat_dark",
    "$hover_texture": "textures/ui/ore/button_flat_darkpressed",
    "$pressed_texture": "textures/ui/ore/button_flat_darkhover",
    "$pressed_no_hover_texture": "textures/ui/ore/button_flat_darkpressed",

    "$default_border_visible": false,
    "$hover_border_visible": false,

    "$button_offset|default": [ 0, 0 ],
    "$void_panel_size|default": [ 10, "100%" ],

    "$radio_toggle_group": true,
    "$toggle_name": "new_navigation_toggle",
    "$toggle_group_default_selected": "$default_selector_toggle_index",
    "$toggle_view_binding_name": "($section_topic + '_tab')",
    "$toggle_state_binding_name": "#toggle_state",
    "$toggle_on_hover_binding_name": "none",
    "$toggle_tab_focus_binding_type": "global",
    "$toggle_tab_focus_binding_name": "#navigation_tab_focus_precedence"
  },

  "color_ore_section_toggle@button_preset.light_ore_section_toggle": {
    "$default_texture": "textures/ui/ore/button_borderless_light",
    "$hover_texture": "textures/ui/ore/button_borderless_lightpressed",
    "$pressed_texture": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_no_hover_texture": "textures/ui/ore/button_borderless_lightpressed",
    "$locked_texture": "textures/ui/ore/disabledButtonNoBorder",

    "$button_texture_color|default": "$f_color_format",
    "$default_texture_color": "$button_texture_color",
    "$default_checked_texture_color": "$button_texture_color",
    "$hover_texture_color": "$button_texture_color",
    "$hover_checked_texture_color": "$button_texture_color",

    "$button_text_color|default": "$light_toggle_default_text_color",
    "$default_text_color": "$button_text_color",
    "$hover_text_color": "$button_text_color",
    "$default_checked_text_color": "$button_text_color",
    "$hover_checked_text_color": "$button_text_color"
  },

  "light_ore_section_toggle@button_preset.ore_section_toggle_base": {
    "$font_type": "default",
    "$button_font_scale_factor": 1.0,

    "$default_text_color": [ 1.0, 1.0, 1.0 ],
    "$hover_text_color": [ 1.0, 1.0, 1.0 ],
    "$default_checked_text_color": [ 1.0, 1.0, 1.0 ],
    "$hover_checked_text_color": [ 1.0, 1.0, 1.0 ]
  },


  // Icon Button
  "icon_button_base@common_buttons.light_content_button": {
    "$button_type_panel": "common_buttons.button_content_panel",

    "$default_button_texture": "textures/ui/start/round_button",
    "$hover_button_texture": "textures/ui/start/round_button_hover",
    "$pressed_button_texture": "textures/ui/start/round_button_pressed",
    "$locked_button_texture": "textures/ui/start/round_button_locked",

    "$default_state_border_visible": false,
    "$hover_state_border_visible": false,
    "$pressed_state_border_visible": false,
    "$locked_state_border_visible": false,

    "$button_color|default": [ 0.89, 0.831, 0.82 ],
    "$button_image_color": "$button_color",

    "$button_pressed_offset|default": [ 0, 0 ]
  },

  "ore_icon_button@button_preset.icon_button_base": {
    "$default_button_texture": "textures/ui/ore/button_borderless_light",
    "$hover_button_texture": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_button_texture": "textures/ui/ore/button_borderless_lightpressed",
    "$locked_button_texture": "textures/ui/ore/disabledButtonNoBorder",

    "$button_pressed_offset|default": [ 0, 2 ]
  },

  "transparent_icon_button@button_preset.icon_button_base": {
    "$default_button_texture": "textures/ui/empty",
    "$hover_button_texture": "textures/ui/gray_transparent",
    "$pressed_button_texture": "textures/ui/gray_transparent",
    "$locked_button_texture": "textures/ui/empty"
  },


  // New Type Toggle
  "minus_image": {
    "type": "image",
    "size": [ 11, 3 ],
    "texture": "textures/ui/minus"
  },

  "plus_image": {
    "type": "image",
    "size": [ 11, 11 ],
    "texture": "textures/ui/plus"
  },


  "button_with_checkbox_toggle@common_toggles.light_text_toggle": {
    "$template_toggle": "button_preset.button_and_icon_template"
  },

  "button_and_icon_template@common_toggles.light_template_toggle": {
    "$unchecked_control|default": "button_preset.toggle_checkbox_unchecked",
    "$checked_control|default": "button_preset.toggle_checkbox_checked",
    "$unchecked_hover_control|default": "button_preset.toggle_checkbox_unchecked_hover",
    "$checked_hover_control|default": "button_preset.toggle_checkbox_checked_hover",
    "$unchecked_locked_control|default": "button_preset.toggle_checkbox_unchecked_locked",
    "$unchecked_locked_hover_control|default": "button_preset.toggle_checkbox_unchecked_locked",
    "$checked_locked_control|default": "button_preset.toggle_checkbox_checked_locked",
    "$checked_locked_hover_control|default": "button_preset.toggle_checkbox_checked_locked",

    "$default_text_color|default": "$light_button_default_text_color",
    "$hover_text_color|default": "$dark_button_hover_text_color",
    "$default_checked_text_color|default": "$light_button_default_text_color",
    "$hover_checked_text_color|default": "$dark_button_hover_text_color",

    "$default_glyph_color|default": "$light_glyph_toggle_default_color",
    "$hover_glyph_color|default": "$dark_glyph_toggle_hover_color",
    "$default_checked_glyph_color|default": "$light_glyph_toggle_checked_default_color",
    "$hover_checked_glyph_color|default": "$dark_glyph_toggle_checked_hover_color"
  },

  "toggle_checkbox_unchecked@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$default_texture",
    "$content_alpha": "$default_texture_alpha",
    "$text_color": "$default_text_color",
    "$glyph_color": "$default_glyph_color",
    "$toggle_image": "button_preset.plus_image",
    "$border_layer": 1,
    "$border_visible": "$default_border_visible",
    "$border_color": "$default_border_color",
    "$toggle_unchecked": true,
    "layer": 1
  },

  "toggle_checkbox_checked@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$hover_texture",
    "$content_alpha": "$default_checked_texture_alpha",
    "$text_color": "$default_checked_text_color",
    "$glyph_color": "$default_checked_glyph_color",
    "$toggle_image": "button_preset.minus_image",
    "$border_layer": 2,
    "$border_visible": "$default_border_visible",
    "$border_color": "$default_border_color",
    "$toggle_checked": true,
    "layer": 2
  },

  "toggle_checkbox_unchecked_hover@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$pressed_texture",
    "$content_alpha": "$default_texture_alpha",
    "$text_color": "$hover_text_color",
    "$glyph_color": "$hover_glyph_color",
    "$toggle_image": "button_preset.plus_image",
    "$border_layer": 3,
    "$border_visible": "$hover_border_visible",
    "$border_color": "$hover_border_color",
    "$toggle_unchecked_hover": true,
    "layer": 3
  },

  "toggle_checkbox_checked_hover@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$pressed_no_hover_texture",
    "$content_alpha": "$default_checked_texture_alpha",
    "$text_color": "$hover_checked_text_color",
    "$glyph_color": "$hover_checked_glyph_color",
    "$toggle_image": "button_preset.minus_image",
    "$border_layer": 4,
    "$border_visible": "$hover_border_visible",
    "$border_color": "$hover_border_color",
    "$toggle_checked_hover": true,
    "layer": 4
  },

  "toggle_checkbox_unchecked_locked@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$unchecked_locked_texture",
    "$content_alpha": "$locked_alpha",
    "$text_color": "$default_text_color",
    "$glyph_color": "$default_glyph_color",
    "$toggle_image": "button_preset.plus_image",
    "$border_layer": 1,
    "$border_visible": "$default_border_visible",
    "$border_color": "$default_border_color",
    "$toggle_locked": true,
    "layer": 1
  },

  "toggle_checkbox_checked_locked@update_check_box_button_ui_panel": {
    "$new_ui_button_texture": "$checked_locked_texture",
    "$content_alpha": "$locked_alpha",
    "$text_color": "$default_text_color",
    "$glyph_color": "$default_glyph_color",
    "$toggle_image": "button_preset.minus_image",
    "$border_layer": 1,
    "$border_visible": "$default_border_visible",
    "$border_color": "$default_border_color",
    "$toggle_locked": true,
    "layer": 1
  },

  "update_check_box_button_ui_panel@common_buttons.new_ui_button_panel": {
    "controls": [
      {
        "toggle_content": {
          "type": "panel",
          "$button_content_size|default": [ "100%", "100%" ],
          "size": "$button_content_size",
          "$anchor": "right_middle",
          "$text_alignment": "left",
          "$button_text_size": [ "100%", "100%" ],
          "controls": [
            {
              "$button_image@$button_image": {
                "ignored": "(not $button_image_visible)",
                "size": "$button_image_size",
                "offset": "$image_offset",
                "anchor_from": "$image_anchor",
                "anchor_to": "$image_anchor",
                "layer": 1
              }
            },
            {
              "button_content": {
                "type": "stack_panel",
                "size": "$button_content_size",
                "orientation": "horizontal",
                "controls": [
                  {
                    "button_content": {
                      "type": "panel",
                      "size": [ "fill", "100%" ],
                      "layer": 10,
                      "controls": [
                        { "$button_type_panel@$button_type_panel": { "size": [ "100% - 12px", "default" ], "layer": 3, "anchor_from": "center", "anchor_to": "center" } }
                      ]
                    }
                  },
                  {
                    "checkbox_image": {
                      "type": "panel",
                      "size": [ "100%y", "100%" ],
                      "layer": 10,
                      "controls": [
                        { "image@$toggle_image": { "anchor_from": "center", "anchor_to": "center", "color": "$glyph_color" } }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "border@common_buttons.focus_border": {
                "color": "$border_color",
                "layer": "$border_layer",
                "alpha": "$border_alpha",
                "ignored": "(not $border_visible)"
              }
            }
          ]
        }
      }
    ]
  }
}