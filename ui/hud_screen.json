{
  "namespace": "hud",

  "hud_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "win10_chat_panel": {
              "type": "panel",
              "size": [ "100%", "100%" ],
              "$anchor": "bottom_left",
              "$offset": [ 0, -50 ],
              "$max_children_size": 16,
              "layer": 30,
              "controls": [
                { "chat_panel@hud.win10_chat_panel": { "$max_size": [ "40%", "100%c" ] } }
              ]
            }
          },
          {
            "item_renderer": {
              "type": "stack_panel",
              "orientation": "horizontal",
              "size": [ "100%c", "100%c" ],
              "offset": [ 4, 4 ],
              "anchor_from": "bottom_right",
              "anchor_to": "bottom_right",
              "layer": 30,
              "$icon_size|default": [ 20, 20 ],
              "controls": [
                { "compass_item": { "type": "custom", "size": "$icon_size", "renderer": "inventory_item_renderer", "property_bag": { "#item_id_aux": 22609920 } } },
                { "clock_item": { "type": "custom", "size": "$icon_size", "renderer": "inventory_item_renderer", "property_bag": { "#item_id_aux": 22740992 } } },
                { "recovery_compass_item": { "visible": false, "type": "custom", "size": "$icon_size", "renderer": "inventory_item_renderer", "property_bag": { "#item_id_aux": 42795008 } } }
              ],
              "bindings": [
                {
                  "binding_name": "#hud_visible",
                  "binding_name_override": "#visible",
                  "binding_type": "global"
                }
              ]
            }
          },
          //{ "test_custom": { "type": "custom", "size": [ "100%", "100%" ], "renderer": "debug_screen_renderer" } },
          /*{
            "test_gradient_custom": {
              "type": "custom",
              "size": [ "100%", "100%" ],
              "renderer": "gradient_renderer",
              "gradient_direction": "vertical",
              "color1": [ 0.89, 0.831, 0.82 ],
              "color2": [ 0.173, 0.729, 0.659 ]
            }
          },*/
          //{ "test_intro@hud.test_intro_panel": {} },
          { "moonlight_intro@hud.moonlight_intro_panel": {} },
          { "function_test@hud.function_test_panel": {} }
        ]
      }
    ]
  },


  //Function Test
  "anim_function_alpha_in": {
    "anim_type": "alpha",
    "easing": "in_cubic",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.anim_function_alpha_stay"
  },

  "anim_function_alpha_stay": {
    "anim_type": "wait",
    "duration": 4,
    "next": "@hud.anim_function_alpha_out"
  },

  "anim_function_alpha_out": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 1,
    "from": 1,
    "to": 0
  },

  "function_test_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "$anim|default": "@hud.anim_item_name_background_alpha_out",
    "controls": [
      {
        "background_image": {
          "type": "image",
          "texture": "textures/ui/cointier_backdrop",
          "size": [ "100%", "100%" ],
          "layer": 41,
          "visible": "($actionbar_text = 'truetone')"
        }
      },
      {
        "text": {
          "type": "label",
          "text": "$actionbar_text",
          "size": [ "default", "default" ],
          "layer": 41,
          "visible": "($actionbar_text = 'truetone')"
        }
      }
    ]
  },


  //Custom Title Show
  "anim_custom_title_start": {
    "anim_type": "alpha",
    "easing": "in_expo",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.anim_custom_title_move_1"
  },

  "anim_custom_title_move_1": {
    "anim_type": "offset",
    "duration": 3,
    "from": [ 0, 0 ],
    "to": [ 0, -20 ],
    "next": "@hud.anim_custom_title_wait"
  },

  "anim_custom_title_wait": {
    "anim_type": "wait",
    "duration": 3/*,
    "next": "@hud.anim_custom_title_end"*/
  },

  "anim_custom_title_move_2": {
    "anim_type": "offset",
    "duration": 2,
    "from": [ 0, -20 ],
    "to": [ 0, -10 ],
    "next": "@hud.anim_custom_title_end"
  },

  "anim_custom_title_end": {
    "anim_type": "alpha",
    "easing": "out_cubic",
    "duration": 1,
    "from": 1,
    "to": 0
  },


  "custom_title_show_panel": {
    "type": "panel",
    "size": [ "60%", "60%" ],
    "anchor_from": "center",
    "anchor_to": "center"
  },

  "custom_title_label": {
    "type": "label",
    "size": [ "default", "default" ],
    "offset": [ 0, 0 ],
    "anchor_from": "$anchor",
    "anchor_to": "$anchor",
    "layer": 41,
    "text": "#text",
    "text_alignment": "center",
    "shadow": true,
    "font_scale_factor": 1.4,
    "$update_string|default": "sidebar_",
    "controls": [
      {
        "data_control": {
          "type": "panel",
          "size": [ 0, 0 ],
          "bindings": [
            {
              "binding_name": "#hud_title_text_string"
            },
            {
              "binding_name": "#hud_title_text_string",
              "binding_name_override": "#preserved_text",
              "binding_condition": "visibility_changed"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not (#hud_title_text_string = #preserved_text) and not ((#hud_title_text_string - $update_string) = #hud_title_text_string))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "data_control",
        "source_property_name": "(#preserved_text - $update_string)",
        "target_property_name": "#text"
      }
    ]
  },

  "second_custom_title_label": {
    "type": "label",
    "size": [ "default", "default" ],
    "offset": [ 0, 0 ],
    "anchor_from": "$anchor",
    "anchor_to": "$anchor",
    "layer": 41,
    "text": "$title_text_binding_name",
    "text_alignment": "center",
    "shadow": true,
    "font_size": "large",
    "$update_string|default": "sidebar_",
    "$title_text_binding_name|default": "#text",
    "$data_name|default": "data_control",
    "controls": [
      {
        "$data_name": {
          "type": "panel",
          "size": [ 0, 0 ],
          "bindings": [
            {
              "binding_name": "#hud_title_text_string"
            },
            {
              "binding_name": "#hud_title_text_string",
              "binding_name_override": "#preserved_text",
              "binding_condition": "visibility_changed"
            },
            {
              "binding_type": "view",
              "source_property_name": "(not (#hud_title_text_string = #preserved_text) and not ((#hud_title_text_string - $update_string) = #hud_title_text_string))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "$data_name",
        "source_property_name": "(#preserved_text - $update_string)",
        "target_property_name": "$title_text_binding_name"
      }
    ]
  },

  "test_custom_title_panel": {
    "type": "panel",
    "size": [ "60%", "60%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "custom_title@hud.custom_title_label": { "$update_string": "sidebar_test_", "$anchor": "center" } }
    ]
  },

  "damage_custom_title_panel": {
    "type": "panel",
    "size": [ "60%", "60%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "custom_title@hud.second_custom_title_label": {
          "$update_string": "sidebar_minus_",
          "$anchor": "bottom_left",
          "$data_name": "minus_control_data",
          "$title_text_binding_name": "#minus_text",
          "color": "$c_color_format",
          "font_type": "smooth"
        }
      }
    ]
  },

  "bonus_point_custom_title_panel": {
    "type": "panel",
    "size": [ "60%", "60%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "custom_title@hud.second_custom_title_label": {
          "$update_string": "sidebar_plus_",
          "$anchor": "right_middle",
          "$data_name": "plus_control_data",
          "$title_text_binding_name": "#plus_text",
          "color": "$a_color_format",
          "font_type": "smooth"
        }
      }
    ]
  },


  //Intro Test
  "anim_intro_alpha_in": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.anim_intro_alpha_stay"
  },

  "anim_intro_alpha_stay": {
    "anim_type": "wait",
    "duration": 4,
    "next": "@hud.anim_intro_alpha_out"
  },

  "anim_intro_alpha_out": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 1,
    "from": 1,
    "to": 0
  },


  "intro_title_start": {
    "anim_type": "alpha",
    "easing": "spring",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.intro_title_wait"
  },

  "intro_title_wait": {
    "anim_type": "wait",
    "duration": 4,
    "next": "@hud.intro_title_end"
  },

  "intro_title_end": {
    "anim_type": "alpha",
    "easing": "spring",
    "duration": 1,
    "from": 1,
    "to": 0
  },

  "test_intro_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "$title_anim|default": "@hud.intro_title_start",
    "$background_anim|default": "@hud.anim_intro_alpha_stay",
    "controls": [
      {
        "background_image": {
          "type": "image",
          "texture": "textures/ui/cointier_backdrop",
          "size": [ "100%", "100%" ],
          "layer": 41,
          "anims": [
            "$background_anim"
          ]
        }
      },
      {
        "title_image": {
          "type": "image",
          "texture": "textures/ui/title",
          "size": [ "100% - 40%", "100%" ],
          "anchor_from": "center_middle",
          "anchor_to": "center_middle",
          "layer": 42,
          "anims": [
            "$title_anim"
          ]
        }
      }
    ]
  },


  //Moonlight Intro
  "anim_intro_alpha_in": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.anim_intro_alpha_stay"
  },

  "anim_intro_alpha_stay": {
    "anim_type": "wait",
    "duration": 4,
    "next": "@hud.anim_intro_alpha_out"
  },

  "anim_intro_alpha_out": {
    "anim_type": "alpha",
    "easing": "linear",
    "duration": 1,
    "from": 1,
    "to": 0
  },


  "intro_title_start": {
    "anim_type": "alpha",
    "easing": "spring",
    "duration": 1,
    "from": 0,
    "to": 1,
    "next": "@hud.intro_title_wait"
  },

  "intro_title_wait": {
    "anim_type": "wait",
    "duration": 4,
    "next": "@hud.intro_title_end"
  },

  "intro_title_end": {
    "anim_type": "alpha",
    "easing": "spring",
    "duration": 1,
    "from": 1,
    "to": 0
  },

  "moonlight_intro_panel": {
    "type": "panel",
    "size": [ "100%y", "40%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "$title_anim|default": "@hud.intro_title_start",
    "$background_anim|default": "@hud.anim_intro_alpha_stay",
    "controls": [
      {
        "moonlight_icon_panel": {
          "type": "panel",
          "size": [ "100%y", "fill" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "controls": [
            {
              "moonlight_icon": {
                "type": "image",
                "texture": "textures/ui/pack_info_glyph_color",
                "size": [ "100%", "100%" ],
                "anims": [ "$background_anim" ]
              }
            },
            {
              "outline_image": {
                "type": "image",
                "texture": "textures/ui/border_line",
                "size": [ "100%", "100%" ],
                "anims": [ "$background_anim" ]
              }
            }
          ]
        }
      },
      {
        "moonlight_text": {
          "type": "label",
          "size": [ "default", "default" ],
          "text": "Moonlight Project",
          "color": [ 0.36, 0.32, 0.06, 0.4 ],
          "offset": [ 0, 0 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 42,
          "anims": [ "$title_anim" ]
        }
      }
    ]
  },


  //Chat Animation
  "anim_chat_txt_alpha": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "duration": 1,
    "from": 1,
    "to": 0
  },

  "anim_chat_txt_wait": {
    "anim_type": "wait",
    "duration": "$chat_item_lifetime",
    "next": "@hud.anim_chat_txt_alpha"
  },

  "anim_chat_bg_alpha": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "destroy_at_end": "chat_grid_item",
    "duration": 1,
    "from": 0.7,
    "to": 0
  },

  "anim_chat_bg_wait": {
    "anim_type": "wait",
    "duration": "$chat_item_lifetime",
    "next": "@hud.anim_chat_bg_alpha"
  },

  "anim_chat_off": {
    "anim_type": "offset",
    "easing": "in_expo",
    "duration": "0.5",
    "from": [ -1400, 0 ],
    "to": [ -100, 0 ],
    "next": "@hud.anim_chat_off1"
  },

  "anim_chat_off": {
    "anim_type": "offset",
    "easing": "out_sine",
    "duration": "0.5",
    "from": [ -100, 0 ],
    "to": [ 0, 0 ],
    "next": "@hud.anim_chat_wait_off"
  },

  "anim_chat_wait_off": {
    "anim_type": "wait",
    "duration": 5.5,
    "next": "@hud.anim_chat_out_off2"
  },

  "anim_chat_out_off1": {
    "anim_type": "offset",
    "easing": "in_sine",
    "duration": "0.5",
    "from": [ -100, 0 ],
    "to": [ -1400, 0 ]
  },

  "anim_chat_out_off2": {
    "anim_type": "offset",
    "easing": "in_sine",
    "duration": "0.5",
    "from": [ 0, 0 ],
    "to": [ -100, 0 ],
    "next": "@hud.anim_chat_out_off1"
  },

  "chat_label": {
    "type": "label",
    "layer": 31,
    "text": "#text",
    "size": [ "100%", "default" ],
    "shadow": true,
    "localize": false,
    "color": "$chat_text_color",
    "font_type": "$chat_font_type",
    "font_scale_factor": "$chat_font_scale_factor",
    "line_padding": "$chat_line_spacing",
    "anims": [
      "@hud.anim_chat_txt_wait"
    ],
    "bindings": [
      {
        "binding_name": "#chat_text",
        "binding_name_override": "#text",
        "binding_type": "collection",
        "binding_collection_name": "chat_text_grid",
        "binding_condition": "once"
      }
    ]
  },

  "chat_grid_item": {
    "type": "panel",
    "layer": 1,
    "size": [ "100%-2px", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": "@hud.anim_chat_off",
    "bindings": [
      {
        "binding_name": "(not #on_new_death_screen)",
        "binding_name_override": "#visible"
      }
    ],
    "controls": [
	  {
        "chat_background": {
          "type": "image",
          "texture": "textures/ui/Black",
          "alpha": 0.5,
          "size": [ "100%", "100%c" ],
          "offset": "@hud.anim_chat_off",
          "anims": [
            "@hud.anim_chat_bg_wait"
          ],
          "controls": [
            {
              "chat_text@chat_label": {
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": [ 2, 0 ]
              }
            }
          ]
        }
      }
    ]
  },

  "chat_panel_base": {
    "type": "panel",
    "$anchor|default": "top_left",
    "anchor_from": "$anchor",
    "anchor_to": "$anchor",
    //Uncomment when text formatting is being accounted for in word length
    //"clips_children": true,
    "size": [ "100%", "100%c" ],
    "$max_size|default": [ "100%", "50%" ],
    "max_size": "$max_size",
    "offset": "$offset",

    "$max_children_size|default": 30,
    "clips_children": true,

    "controls": [
      {
        "stack_panel": {
          "type": "stack_panel",
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "factory": {
            "name": "chat_item_factory",
            "max_children_size": "$max_children_size",
            "control_ids": {
              "chat_item": "chat_item@hud.chat_grid_item"
            }
          }
        }
      }
    ]
  },

  "chat_panel@hud.chat_panel_base": {
    "visible": "(not $win10_edition)"
  },

  "win10_chat_panel@hud.chat_panel_base": {
    "visible": "$win10_edition"
  },


  "hud_tip_text": {
    "type": "image",
    "size": [ "100%c + 16px", "100%c + 9px" ],
    "offset": [ 0, -79 ],
    "texture": "textures/ui/hud_text_background_white",
    "color": [ 0.173, 0.729, 0.659 ],
    "alpha": "@hud.anim_item_name_background_alpha_out",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "$wait_duration|default": 1,
    "$destroy_id|default": "popup_tip_text",
    "controls": [
      {
        "item_text_label": {
          "type": "label",
          "layer": 31,
          "color": "$tool_tip_text",
          "text": "#text",
          "shadow": true,
          "alpha": "@hud.anim_item_name_text_alpha_out",
          "bindings": [
            {
              "binding_name": "#tip_text",
              "binding_name_override": "#text"
            }
          ]
        }
      }
    ]
  },


  "anim_actionbar_text_offset_start": {
    "anim_type": "alpha",
    "easing": "in_expo",
    "duration": 3,
    "from": 0,
    "to": 1,
    "next": "@hud.anim_actionbar_text_offset_wait"
  },

  "anim_actionbar_text_offset_wait": {
    "anim_type": "offset",
    "easing": "linear",
    "duration": 9,
    "from": [ "-15%", 0 ],
    "to": [ "100% + 130px", 0 ],
    "next": "@hud.anim_actionbar_text_offset_end"
  },

  "anim_actionbar_text_offset_end": {
    "anim_type": "alpha",
    "easing": "out_expo",
    "duration": 3,
    "to": 0,
    "from": 1,
    "destroy_at_end": "hud_actionbar_text"
  },

  "anim_actionbar_text_background_alpha_start": {
    "anim_type": "alpha",
    "easing": "in_expo",
    "duration": 2,
    "from": 0,
    "to": 0.6,
    "next": "@hud.anim_actionbar_text_background_alpha_wait"
  },

  "anim_actionbar_text_background_alpha_wait": {
    "anim_type": "wait",
    "duration": 9,
    "next": "@hud.anim_actionbar_text_background_alpha_end"
  },

  "anim_actionbar_text_background_alpha_end": {
    "anim_type": "alpha",
    "easing": "in_expo",
    "duration": 2,
    "to": 0,
    "from": 0.6,
    "destroy_at_end": "hud_actionbar_text"
  },

  "hud_actionbar_text": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "alpha": 1.0,
    "controls": [
      {
        "actionbar": {
          "type": "image",
          "size": [ "100%c + 12px", "100%c + 5px" ],
          "offset": [ 0, "50%-68px" ],
          "texture": "textures/ui/hud_tip_text_background",
          "alpha": "@hud.anim_actionbar_text_background_alpha_out",
          "controls": [
      {
        "actionbar_message": {
          "type": "label",
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "$tool_tip_text",
          "layer": 31,
          "text": "$actionbar_text",
          "localize": false,
          "alpha": "@hud.anim_actionbar_text_alpha_out"
        }
      }
          ],
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "(($actionbar_text - 'rolling_') = $actionbar_text)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "rolling_actionbar_panel": {
          "type": "panel",
          "size": [ "100%", "100%c + 5px" ],
          "offset": [ 0, "7%" ],
          "alpha": "@hud.anim_actionbar_text_background_alpha_start",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "controls": [
            {
        "actionbar_background_image": {
          "type": "image",
          "size": [ "200%", "100%sm + 7px" ],
          "texture": "textures/ui/Black",
          "alpha": "@hud.anim_actionbar_text_background_alpha_start"
        }
            },
            {
        "actionbar_message": {
          "type": "label",
          "size": [ "100%", "13px" ],
          "offset": [ "-40%", 0 ],
          "text_alignment": "left",
          "font_scale_factor": 1.2,
          "color": "$tool_tip_text",
          "layer": 1,
          "text": "$actionbar_text",
          "localize": false,
          "alpha": "@hud.anim_actionbar_text_offset_start"
        }
            }
          ],
          "bindings": [
            {
              "binding_type": "view",
              "source_property_name": "(not (($actionbar_text - 'rolling_') = $actionbar_text))",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

  "hud_title_text": {
    "type": "stack_panel",
    "orientation": "vertical",
    "offset": [ 0, -19 ],
    "layer": 1,
    "alpha": "@hud.anim_title_text_alpha_in",
    "propagate_alpha": true,
    "controls": [
      {
