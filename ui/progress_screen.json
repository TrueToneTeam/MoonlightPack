{
  "namespace": "progress",

  "fancy_progress_loading_bars": {
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100% - 4px", 10 ],
    "offset": [ 0, -2 ]
  },

  "fancy_progress_loading_bars/progress_bar_nub": {
    "ignored": true
  },

  "new_cancel_button_world_loading@progress.new_cancel_button": {
    "size": [ 70, 30 ],
    "offset": [ -2, -14 ],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right"
  },

  "gamepad_helpers": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 32 ]
  },


  "world_convert_modal_progress_screen_content": {
    "type": "panel",

    "layer": 3,

    "controls": [
      { "mobile_data_icon@progress.mobile_data_icon": {} },
      {
        "title_panel_content@common_art.title_panel_content": {
          "$splash_text_visible": false,
          "layer": -2
        }
      },
      {
        "world_modal_progress_panel@progress.world_modal_progress_panel": {
          "$modal_button_panel_type": "progress.modal_button_panel"
        }
      },
      { "popup_dialog_factory@progress.popup_dialog_factory": {} }
    ]
  },

  "world_save_modal_progress_screen_content": {
    "type": "panel",
    "controls": [
      {
        "title_panel_content@common_art.title_panel_content": {
          "$splash_text_visible": false
        }
      },
      {
        "world_modal_progress_panel@progress.world_modal_progress_panel": {
          "$modal_button_panel_type": "progress.modal_button_panel_with_retry"
        }
      },
      {
        "save_icon@progress.auto_save": {}
      },
      { "popup_dialog_factory@progress.popup_dialog_factory": {} }
    ]
  },


  "new_cancel_button@button_preset.light_ore_button": {
    "$pressed_button_name": "button.menu_exit",
    "$button_text": "gui.cancel",
    "$button_text_binding_type": "global",
    "size": [ 66, 26 ],
    "offset": [ 0, 0 ],
    "bindings": [
      {
        "binding_name": "#cancel_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "new_retry_button@button_preset.light_ore_button": {
    "$pressed_button_name": "button.menu_retry",
    "$button_text": "gui.retry",
    "size": [ 66, 26 ],
    "offset": [ 50, 0 ],
    "bindings": [
      {
        "binding_name": "#retry_and_abort_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "new_abort_button@button_preset.light_ore_button": {
    "$pressed_button_name": "button.menu_exit",
    "$button_text": "gui.cancel",
    "size": [ 66, 26 ],
    "offset": [ -50, 0 ],
    "bindings": [
      {
        "binding_name": "#retry_and_abort_visible",
        "binding_name_override": "#visible"
      }
    ]
  },


  "modal_progress_screen": {
    "$force_render_below": "$is_pregame",
    "$is_full_screen_layout": true
  },

  "realms_loading_progress_screen": {
    "$screen_content": "progress.world_modal_progress_panel",
    "$screen_bg_content": "common.empty_panel",
    "$use_custom_panorama": "(not $is_holographic)"
  },

  "world_loading_progress_screen": {
    "$use_custom_panorama": "(not $is_holographic)"
  },

  "world_saving_progress_screen": {
    "$use_custom_panorama": "(not $is_holographic)"
  },

  "world_convert_modal_progress_screen":{
    "$use_custom_panorama": "(not $is_holographic)"
  },


  "empty_progress_bar_icon": {
    "type": "image",
    "texture": "textures/ui/experience_bar_empty_blue"
  },

  "full_progress_bar_icon_base": {
    "type": "image",
    "texture": "textures/ui/experience_bar_full_blue",
    "clip_direction": "left",
    "clip_pixelperfect": false
  },

  "fancy_progress_loading_bars": {
    "type": "panel",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "98%", 7 ],
	"offset": [ 0, "-4px" ],
    "layer": 5,
    "controls": [
      {
        "full_progress_bar_icon@progress.full_progress_bar_icon_base": {
          "layer": 2,
          "bindings": [
            {
              "binding_name": "#loading_bar_percentage",
              "binding_name_override": "#clip_ratio"
            }
          ]
        }
      },
      {
        "empty_progress_bar_icon@progress.empty_progress_bar_icon": {
          "layer": 1
        }
      },
      {
        "progress_bar_nub@progress.progress_bar_nub": {
          "size": [ "100% - 10px", 5 ],
          "layer": 4
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "#loading_bar_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  "progress_title_world_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100% - 8px", 55 ],
    "controls": [
      {
        "progress_title_text@progress.progress_title_text": {
          "size": [ "100%", 20 ],
          "text": "#title_text",
          "text_alignment": "left",
          "font_size": "large",
          "shadow": true,
          "bindings": [
            {
              "binding_name": "#title_text"
            }
          ]
        }
      },
      {
        "progress_bar_text@progress.progress_bar_text": {
          "size": [ "100%", 48 ],
          "text": "#progress_text",
          "text_alignment": "left",
          "shadow": true,
          "localize": false,
          "bindings": [
            {
              "binding_name": "#progress_text"
            }
          ]
        }
      }
    ]
  },

  "world_modal_progress_panel": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "base_content": {
          "type": "panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "size": [ "100%", "100%" ],
          "offset": [ 0, 0 ],
          "controls": [
            {
              "progress_title_world_panel@progress.progress_title_world_panel": {
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "offset": [ 4, -5 ]
              }
            },
            {
              "fancy_progress_loading_bars@progress.fancy_progress_loading_bars": {
              }
            },
            {
              "progress_loading_bars@progress.progress_loading_bars": {
                "size": [ 128, 16 ]
              }
            },
            {
              "cancel_button_world_loading@progress.new_cancel_button_world_loading": {
                "bindings": [
                  {
                    "binding_name": "#cancel_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "world_save_modal_progress_screen_content/save_icon": {
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [ -9, -20 ]
  }
}